generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  username  String   @unique
  gender    String
  password  String
  bio       String?
  image     String?
  posts     Post[]   @relation("UserPosts")
}

model Post {
  id        String  @id @default(uuid())
  image     String?
  content   String
  creator   User?   @relation("UserPosts", fields: [creatorId], references: [id])
  creatorId String
}